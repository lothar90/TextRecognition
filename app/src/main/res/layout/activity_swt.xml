<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SWTActivity"
        android:id="@+id/drawer_layout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarSWT"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

        </FrameLayout>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/galleryImageViewSWT"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/gallery_image_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>

            <android.support.design.widget.FloatingActionButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:id="@+id/galleryActionButtonSWT"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:focusable="true"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    app:elevation="10dp"
                    android:onClick="onGalleryActionButtonClick"/>

            <android.support.design.widget.FloatingActionButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:id="@+id/playActionButtonSWT"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:focusable="true"
                    app:srcCompat="@android:drawable/ic_media_play"
                    app:elevation="10dp"
                    android:onClick="onPlayActionButtonClick"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/linearLayout2">
                <TextView
                        android:text="LowThresh:"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lowThreshText"
                        android:layout_weight="1"/>
                <TextView
                        android:text="100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lowThreshValue"
                        android:layout_weight="1"/>
                <TextView
                        android:text="HighThresh:"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/highThreshText"
                        android:layout_weight="1"/>
                <TextView
                        android:text="150"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/highThreshValue"
                        android:layout_weight="1"/>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/navigationViewSWT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/drawer_view"
            app:headerLayout="@layout/navigation_header"/>

</android.support.v4.widget.DrawerLayout>